<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.mckimquyen.binaryeye.view.widget.CropImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/view_barcode" />

    <com.mckimquyen.binaryeye.view.widget.DetectorView
        android:id="@+id/detectorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include layout="@layout/roy_v_toolbar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/scan"
            style="@style/FAB"
            android:contentDescription="@string/scan_code"
            android:src="@drawable/ic_action_next" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</merge>
